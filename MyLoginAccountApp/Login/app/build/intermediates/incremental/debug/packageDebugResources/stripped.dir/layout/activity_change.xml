<?xml version="1.0" encoding="utf-8"?>
                                                                   

    
                                          

                 
                           
                                                                   
           

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center" android:tag="layout/activity_change_0" xmlns:android="http://schemas.android.com/apk/res/android">
        <EditText
            android:id="@+id/oldpass"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:hint="@string/old_pass_tips"
            android:layout_marginTop="@dimen/layout_marginTop30"/>
        <EditText
            android:id="@+id/newpass"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:hint="@string/new_pass_tips"
            android:layout_marginTop="@dimen/layout_marginTop30"/>
        <EditText
            android:id="@+id/newpass2"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:hint="@string/new_pass2_tips"
            android:layout_marginTop="@dimen/layout_marginTop30"/>
        <Button
            android:id="@+id/changepass"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:text="@string/change"
            android:tag="binding_1"                          
            android:layout_marginTop="@dimen/layout_marginTop30"/>
        <Button
            android:id="@+id/back"
            android:layout_width="@dimen/dimen_300"
            android:layout_height="wrap_content"
            android:text="@string/toHome"
            android:layout_marginTop="@dimen/layout_marginTop30"/>
    </LinearLayout>
         